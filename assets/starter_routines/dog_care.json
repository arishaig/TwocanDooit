          "type": "basic",
          "voiceEnabled": true,
          "order": 1
        },
        {
          "id": "water-check",
          "title": "Fresh water in {location}",
          "description": "Refill water bowls",
          "type": "variableParameter",
          "variableName": "location",
          "variableOptions": ["kitchen", "outside", "crate", "multiple bowls"],
          "voiceEnabled": true,
          "order": 2
        },
        {
